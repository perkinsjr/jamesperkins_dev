{
  "collections": [
    {
      "label": "Blog Posts",
      "name": "posts",
      "path": "data/post",
      "fields": [
        {
          "type": "string",
          "label": "Author",
          "name": "author",
          "ui": {
            "defaultItem": "James Perkins"
          }
        },
        {
          "type": "datetime",
          "dateFormat": "MM/DD/YY",
          "label": "Date",
          "name": "date",
          "ui": {
            "default": "08/01/2021"
          }
        },
        {
          "type": "string",
          "label": "Title",
          "name": "title",
          "ui": {
            "default": "A New Blog Post"
          }
        },
        {
          "type": "string",
          "label": "Excerpt",
          "name": "excerpt",
          "ui": {
            "component": "textarea",
            "default": "A new excerpt"
          }
        },
        {
          "type": "image",
          "label": "Image",
          "name": "hero_image",
          "ui": {
            "default": "https://res.cloudinary.com/dub20ptvt/image/upload/v1626563323/Adding_comments_iswtsn.png"
          }
        },
        {
          "label": "Tags",
          "name": "tags",
          "type": "string",
          "list": true,
          "ui": {
            "default": [
              "Tutorial",
              "Next"
            ]
          }
        },
        {
          "type": "boolean",
          "label": "Published",
          "name": "published",
          "ui": {
            "default": false
          }
        },
        {
          "type": "string",
          "label": "Blog Post Body",
          "name": "body",
          "isBody": true,
          "ui": {
            "component": "markdown",
            "default": "A super long body"
          }
        }
      ]
    }
  ]
}